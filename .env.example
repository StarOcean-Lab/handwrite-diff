# Backend Configuration
DEBUG=false
DATABASE_URL=sqlite+aiosqlite:///./handwrite_diff.db

# Storage paths (inside container)
STORAGE_DIR=/app/storage
UPLOAD_DIR=/app/storage/uploads
ANNOTATED_DIR=/app/storage/annotated

# CORS - allow frontend origin
CORS_ORIGINS=http://localhost:3000

# Gemini OCR (required for OCR functionality)
# Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini API endpoint (OpenAI-compatible)
# Example: https://yunwu.ai/v1 or https://generativelanguage.googleapis.com/v1beta/
GEMINI_BASE_URL=

# Gemini model
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MAX_RETRIES=3
GEMINI_TEMPERATURE=0.1
GEMINI_TIMEOUT=120
